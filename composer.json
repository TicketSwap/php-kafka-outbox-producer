{
    "name": "ticketswap/kafka-outbox-producer",
    "description": "PHP library to produce kafka message using the outbox pattern",
    "type": "library",
    "autoload": {
        "psr-4": {
            "TicketSwap\\Kafka\\Outbox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TicketSwap\\Kafka\\Outbox\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "sa": "vendor/bin/phpstan analyze"
    },
    "require": {
        "php": "^8.0",
        "doctrine/orm": "^2.9",
        "symfony/http-kernel": "^5.2",
        "symfony/config": "^5.2",
        "symfony/dependency-injection": "^5.2",
        "ramsey/uuid": "^4.1",
        "doctrine/doctrine-bundle": "^2.2.3||^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/extension-installer": "^1.1"
    }
}
